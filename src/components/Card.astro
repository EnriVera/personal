---
interface Props {
	GCS?: number;
	GCE?: number;
	GRS?: number;
	GRE?: number;
}

const { GCS, GCE, GRS, GRE} = Astro.props;
---

<div class="content_card">
	<div class="effect"></div>
	<div class="content">
	</div>
</div>
<style define:vars={{ GCS, GCE, GRS, GRE}}>
	.content_card {
		--line-width: 1px;
		--line-color: #adbbff;
		--start-angle: 253deg;
		--delay: 11s;
		--easing: linear;

		grid-column-start: var(--GCS); 
		grid-column-end: var(--GCE); 
		grid-row-start: var(--GRS); 
		grid-row-end: var(--GRE);
		position: relative;
		overflow: hidden;
		border-radius: 16px;
		padding: 42px 24px;
		border: 1px solid rgba(186, 207, 247, .12);

		&::before {
			content: "";
			position: absolute;
			top: 0;
        	left: 0;
			height: 100%;
			width: 100%;
			background: linear-gradient(0deg, rgba(186, 207, 247, .04), rgba(186, 207, 247, .04)), var(--background_card);
			box-shadow: inset 0 1px 1px 0 rgba(216, 236, 248, .2), inset 0 24px 48px 0 rgba(168, 216, 245, .06), 0 16px 32px rgba(0, 0, 0, .3);
			background-clip: content-box;
			border-radius: 16px;
		}

		.effect {
			position: absolute;
			inset: 0;
			border-radius: inherit;
			filter: drop-shadow(0 0 10px var(--line-color));
			opacity: .5;
    		animation: card_line-anim__iu92O 12s var(--easing) infinite, card_line-opacity-loop__KzXmR 3s var(--easing) infinite;
			/* border: 1px solid var(--line-color); */
			&::before {
				content: "";
				position: absolute;
				inset: 0;
				border-radius: inherit;
				padding: var(--line-width);
				background: conic-gradient(from calc(var(--angle) + var(--start-angle)), transparent 0, var(--line-color) 20%, transparent 25%);
				-webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
				mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
				mask-composite: xor;
				-webkit-mask-composite: xor;
				mask-composite: exclude;
				animation: inherit;
			}
		}

		.content {
			position: relative;
			height: 100%;
			z-index: 1;
			display: flex;
			flex-direction: column;
			gap: 16px;
		}

		@media (min-width: 640px) {
				& {
					padding:42px 36px
				}
		}
	}
</style>
